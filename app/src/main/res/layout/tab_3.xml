<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Budget Planner"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting Budget:"
        android:id="@+id/textView6"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Days of Trip:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:text="Edit"
        android:id="@+id/edit"
        android:onClick="gonew3"
        android:layout_below="@+id/displaydays"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/displaybudget"
        android:text="0.00"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  0"
        android:id="@+id/displaydays"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignEnd="@+id/displaybudget" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount Left in Wallet:"
            android:id="@+id/textView8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displaywallet"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Food: $"
            android:gravity="right"
            android:id="@+id/textView10"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displayfood"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="ADD"
            android:id="@+id/addfood"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Transport: $"
            android:gravity="right"
            android:id="@+id/textView12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displaytravel"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="ADD"
            android:id="@+id/addtransport"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shopping: $"
            android:gravity="right"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displayshop"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="ADD"
            android:id="@+id/addshop"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Others: $"
            android:gravity="right"
            android:id="@+id/textView16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displayothers" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="ADD"
            android:id="@+id/addothers"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Spent:"
            android:id="@+id/textView19"
            android:layout_alignTop="@+id/textView27"
            android:layout_toStartOf="@+id/textView27" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.00"
            android:id="@+id/displayspent"/>
    </LinearLayout>

</RelativeLayout>